<UserControl x:Class="Prot1.UserControls.MenuButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Name="Page_MenuButton">
    <Border Cursor="Hand" Width="Auto" Height="50" CornerRadius="3" BorderBrush="#272727" BorderThickness="1" Background="{Binding BannerColor, ElementName=Page_MenuButton}">
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="50,0,50,0" Text="{Binding Text, ElementName=Page_MenuButton}" FontSize="19" FontWeight="SemiBold" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Rajdhani" Foreground="#fff" />
        </StackPanel>
    </Border>
</UserControl>